        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Profile"
            android:label="Profile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ListGroupsActivity"
            android:label="List Groups"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyGroupsActivity"
            android:label="My Groups"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ListMyGroupsActivity"
            android:label="My Groups"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ActivityOne"
            android:label="Group"
            android:parentActivityName=".ListGroupsActivity" />
        <activity
            android:name=".ActivityTwo"
            android:label="Group"
            android:parentActivityName=".ListMyGroupsActivity" />
        <activity
            android:name=".GroupsActivity"
            android:label="List Groups"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ImageViewActivity"
             />
        <activity
            android:name=".ImageViewActivity2"
            />

        <receiver
            android:name=".AlarmReceiver"
            android:process=":remote">

        </receiver>
    </application>

</manifest>