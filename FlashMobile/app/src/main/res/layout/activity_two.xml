<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView02"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".ActivityTwo">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:addStatesFromChildren="true"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:logo="@color/cardview_light_background"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:titleTextColor="@color/white"
            tools:navigationIcon="?attr/actionModeCloseDrawable" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/insertImageTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridImageTwo"
            android:layout_marginStart="46dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/scattaTwo"
            android:clickable="true"
            android:tint="@color/cardview_light_background"
            app:backgroundTint="@color/colorPrimaryDark"
            app:srcCompat="@android:drawable/ic_input_add" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/scattaTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:clickable="true"
            android:onClick="InsertImage"
            app:backgroundTint="@color/colorPrimaryDark"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <GridView
            android:id="@+id/gridImageTwo"
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbarTwo"
            android:layout_marginTop="11dp"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"></GridView>

    </RelativeLayout>
</ScrollView>